@import 'box'
@import 'pos'

body
  font-family Helvetica,Arial,sans-serif
  background-color #1A1A1A
  color #888

h1,h2,h3,h4,h5
  margin 0
  padding 0

.App
  abspos 0px 0px 0px 0px

  > .Login
    z-index 4
    position fixed
    abspos 0px 0px 0px 0px

  > .ChatLog
    width 100%
    padding-bottom 70px

  > .StatusBar
    z-index 3
    position fixed
    bottom 34px
    width 100%

  > .wrapForFF_see_579776
    position fixed
    bottom 0
    height 34px
    width 100%
    
    > #chatInputGroup
      background-color #111
      box horizontal
      color #BBB
      font-size 20px
      line-height 34px
      width 100%

      > .arrow
        color #666
        font-weight bold
        margin 0 5px 0 10px
      
      > .wrapper
        box-flex 1

        > #chatInput
          margin 0
          background-color #111
          border none
          color #BBB
          font-size 20px
          outline none
          width 100%
