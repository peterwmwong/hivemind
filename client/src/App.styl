@import 'pos'

body
  font-family Helvetica,Arial,sans-serif
  background-color #222
  color #888

h1,h2,h3,h4,h5
  margin 0
  padding 0

.App
  abspos 0px 0px 0px 0px

  > .ChatLog
    abspos 0px 0px 0px 0px

  > .StatusBar
    abspos false 0px 32px 0px

  > .arrow
    abspos false 0px 0px 10px
    color #555
    font-size 24px

  > .chatInput
    abspos false 0px 0px 30px
    height 30px
    outline none
    border none
    background-color transparent
    color #BBB
    font-size 20px