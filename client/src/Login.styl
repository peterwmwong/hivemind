@import 'box'
@import 'border'

.Login

  background-color #000
  padding 20% 0 0 50px
  box-sizing content-box

  > .greet
    color #999
    margin 0 0 5px 2px

    > span
      color #FFF
      font-style italic

  > .inputGroup
    > *
      border none
      padding 5px 8px 5px 8px
      background-color #333
      color #DDD

    > .name
      //

    > .submit
      border-radius 2px

      &:hover
        background-color #555
        color #FFF
        cursor pointer
