@import 'box'

.ChatLog
  font-size 18px

  > .chat
    padding 2px 5px 2px 5px
    color #DDD
    box horizontal
    width 100%
    box-sizing border-box

    &.self
      color #666
      
      > .from
        color #444

    > .datetime
      min-width 48px
      color #444
      margin 0 10px 0 2px
      font-size 12px
      line-height 24px

    > .from
      color #888
      font-weight bold
      overflow hidden
      margin 0 10px 0 0
      white-space nowrap
      text-overflow ellipsis

      &::after
        content ":"
        font-weight normal

    > .msg
      box-flex 1
      word-wrap break-word
