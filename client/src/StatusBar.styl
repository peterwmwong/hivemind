@import 'border'
@import 'box'
@import 'gradient'

.StatusBar
  gradient #333 #222
  border-top 1px solid #3F3F3F
  box-shadow 0px 2px 3px #111

  > .onlineUsers
    display inline-block
    float right

    > *
      display inline-block

    > .label
      background-color #373
      border-radius 3px
      padding 2px 8px 2px 8px
      margin 5px
      color #6F6

    > .list
      > .user
        padding 0 5px 0